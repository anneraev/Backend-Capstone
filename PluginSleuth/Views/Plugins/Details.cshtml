@model PluginSleuth.Models.Plugin

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plugin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.About)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.About)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Engine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Engine.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PluginType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PluginType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CommercialUse)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CommercialUse == 0)
            {
                <p>Non-Commercial</p>
            }
            else if (Model.CommercialUse == 1)
            {
                <p>Paid Commercial Use</p>
            }
            else if (Model.CommercialUse == 2)
            {
                <p>Contact Author to Inquire</p>
            }
            else
            {
                <p>Free Commercial Use</p>
            }
        </dd>
        <dt class="col-sm-2">
            @if (Model.Free == true)
            {
                <p>Download for Free!</p>
            }
            else
            {
                <p>Paid Download.</p>
            }
            @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Free)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Free)
            </dd>*@
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Webpage)
        </dt>
        <dd class="col-sm-10">
            <a target="_blank" href=@ViewBag.Url>@Html.DisplayFor(model => model.Title)</a>
        </dd>
    </dl>
</div>
